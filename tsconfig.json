{
  "extends": "@tsconfig/node20/tsconfig.json",
  "baseUrl": "./",
  "compilerOptions": {
    "outDir": "dist"
  },
  "paths": {
    "@service/*": ["src/services/*"],
    "@schema/*": ["src/schema/*"],
    "@error/*": ["src/errors/*"]
  },
  "include": ["src/**/*.ts", "types/*.d.ts"],
  "exclude": ["node-modules"]
}
